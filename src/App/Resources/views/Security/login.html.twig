{% extends "::layout.html.twig" %}

{% block content %}
  {% block page_content %}
    <h1>Connexion</h1>

        <form class="form-horizontal" action="{{ path('login_check') }}" method="post" role="form">
          <div class="form-group">
            <label for="inputNickname" class="col-sm-4 control-label">Nom dâ€™utilisateur</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" id="inputNickname" name="_username" value="{{ last_username }}" />
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-sm-4 control-label">Password</label>
            <div class="col-sm-8">
              <input type="password" class="form-control" id="inputPassword" name="_password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <div class="checkbox">
                <label>
                  <input type="checkbox" id="remember_me" name="_remember_me" checked>Se souvenir de moi
                </label>
              </div>
            </div>
          </div>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              <button type="submit" class="btn btn-success">Connexion</button>
            </div>
          </div>
        </form>
  {% endblock page_content %}
{% endblock content %}