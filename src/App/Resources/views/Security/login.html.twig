{% extends "::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
            <div class="row">
                <div class="col-md-8 col-md-offset-4">
                    <h1>Connexion</h1>
                </div>
            </div>

            <form class="form-horizontal" action="{{ path('login') }}" method="post" role="form">
                <div class="form-group row">
                    <div class="col-md-8 col-md-offset-4">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="username" class="col-md-4 control-label">Nom dâ€™utilisateur</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-md-4 control-label">Password</label>
                    <div class="col-md-8">
                        <input type="password" class="form-control" id="password" name="_password" />
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group row">
                    <div class="col-md-2 col-md-offset-4">
                        <button type="submit" class="btn btn-default custom-btn">Connexion</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock content %}
