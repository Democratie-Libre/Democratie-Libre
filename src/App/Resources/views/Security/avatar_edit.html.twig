{% extends '::layout.html.twig' %}

{% block page_content %}

    <h1>Modifier mon avatar</h1>

    {% if app.user.webPath is empty %}
        <img src="{{ asset('img/defaultProfile128.png') }}" class="marginAuto">
    {% else %}
        <img src="{{ asset(app.user.webPath) }}" class="marginAuto">
    {% endif %}

    {{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    <input type="submit" class="btn btn-primary btn-lg" value="Enregistrer" />
    {{ form_end(form) }}

{% endblock page_content %}
